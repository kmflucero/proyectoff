<div class="row">
  <div class="col-md-2">
    <%= link_to "continuar comprando", root_path, class: 'btn btn-warning' %>
  </div>
  <div class="col-md-2 offset-md-8">
    <%= link_to "vaciar carro", empty_cart_orders_path, class: 'btn btn-danger', method: :delete %>
  </div>
</div>
<% if @orders.present? %>
  <table class="table table-hover">
    <tr>
      <th>Producto
      </th>
      <th>
        Precio
      </th>
      <th>
        Cantidad
      </th>
      <th>
        Subtotal
      </th>
      <th>
        Eliminar
      </th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td>
        <%= order.product.name %>
      </td>
      <td>
        <%= order.product.price %>
      </td>
      <td>
        <%= order.quantity %>
      </td>
      <td>
        $<%= order.quantity * order.product.price %>
      </td>
      <td>
        <%= link_to order_path(order), class: 'btn btn-danger', method: :delete do %>
        <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
    <tr>
      <th>
        Total:
      </th>
      <th>  </th>
      <th></th>
      <th>
        $<%= @total %>
      </th>
    </tr>
  </table>
<% else %>
  <h6>No tienes ninguna Orden</h6>
<% end %>


